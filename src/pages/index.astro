---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Codexsus - Jasa Pembuatan Website & Portofolio Profesional',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Hubungi Kami',
        href: 'https://wa.me/62895610090128?text=Halo%20Codexsus!%20Saya%20ingin%20konsultasi%20tentang%20pembuatan%20website%20portofolio%20dan%20landing%20page.%20Bisakah%20kita%20diskusi%3F',
        target: '_blank',
        icon: 'tabler:brand-whatsapp',
      },
      { text: 'Lihat Layanan', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Codexsus - Jasa Pembuatan Website Profesional' }}>
    <Fragment slot='title'>
      Wujudkan <span class='text-accent dark:text-white'>Website Impian Anda</span><br />
      <span class='hidden xl:inline'>Bersama Tim Profesional Codexsus</span>
    </Fragment>

    <Fragment slot='subtitle'>
      <span class='hidden sm:inline'>
        <span class='font-semibold'>Codexsus</span> adalah partner terpercaya untuk membangun website portofolio dan landing
        page yang modern, responsif, dan SEO-friendly dengan teknologi terkini.
      </span>
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note
    title='ðŸš€ Codexsus Digital Solution:'
    description='Solusi Website Profesional, Cepat, dan Terpercaya untuk Bisnis Modern'
  />

  <!-- Features Widget *************** -->

  <Features
    id='features'
    tagline='Layanan Unggulan'
    title='Mengapa Memilih Codexsus?'
    subtitle='Tim profesional dengan pengalaman 5+ tahun dalam membangun website berkualitas tinggi untuk berbagai industri.'
    items={[
      {
        title: 'Desain Modern & Responsif',
        description:
          'Website yang terlihat profesional di semua perangkat, dari desktop hingga smartphone dengan desain yang eye-catching.',
        icon: 'tabler:device-desktop',
      },
      {
        title: 'Portofolio Menarik',
        description:
          'Showcase karya dan project Anda dengan galeri yang interaktif dan layout yang memukau untuk menarik klien potensial.',
        icon: 'tabler:briefcase',
      },
      {
        title: 'Loading Super Cepat',
        description:
          'Website dengan optimasi terbaik yang loading dalam hitungan detik, memberikan pengalaman browsing yang smooth.',
        icon: 'tabler:bolt',
      },
      {
        title: 'SEO Friendly',
        description:
          'Website Anda mudah ditemukan di Google dengan optimasi SEO yang tepat, meningkatkan visibilitas online bisnis Anda.',
        icon: 'tabler:search',
      },
      {
        title: 'Maintenance & Support',
        description:
          'Dukungan penuh setelah website jadi, termasuk update konten, backup rutin, dan perbaikan jika ada masalah.',
        icon: 'tabler:settings',
      },
      {
        title: 'Custom Fitur Sesuai Kebutuhan',
        description:
          'Fitur khusus yang disesuaikan dengan bisnis Anda seperti contact form, gallery, blog, dan integrasi media sosial.',
        icon: 'tabler:puzzle',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline='Teknologi Terdepan'
    title='Membangun Website dengan Teknologi Terkini & Terpercaya!'
    items={[
      {
        title: 'Framework Modern (React, Next.js, Astro)',
        description:
          'Menggunakan teknologi terdepan seperti React dan Next.js untuk performa optimal dan pengalaman pengguna yang luar biasa.',
      },
      {
        title: 'Styling dengan Tailwind CSS & CSS Custom',
        description:
          'Kombinasi Tailwind CSS dan CSS custom untuk desain yang fleksibel, konsisten, dan sesuai brand identity Anda.',
      },
      {
        title: 'Compatible di Semua Browser & Device',
        description:
          'Website yang berfungsi sempurna di Chrome, Firefox, Safari, Edge dan responsive di semua ukuran layar dari mobile hingga desktop.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Colorful Image',
    }}>
    <Fragment slot='content'>
      <h3 class='text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2'>Teknologi Terpercaya & Modern</h3>
      Dapatkan keunggulan kompetitif dengan menggunakan teknologi web terkini yang telah terbukti di industri
    </Fragment>

    <Fragment slot='bg'>
      <div class='absolute inset-0 bg-blue-50 dark:bg-transparent'></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Kustomisasi Penuh Sesuai Brand',
        description:
          'Website yang disesuaikan 100% dengan identitas brand Anda, mulai dari warna, font, layout hingga konten yang mencerminkan nilai perusahaan.',
      },
      {
        title: 'Berbagai Pilihan Layout Modern',
        description:
          'Portfolio grid, landing page minimalis, blog profesional, atau e-commerce - kami menyediakan beragam template modern yang dapat disesuaikan.',
      },
      {
        title: 'Responsive di Semua Device',
        description:
          'Website yang tampil sempurna di desktop, tablet, dan smartphone dengan loading cepat dan navigasi yang smooth.',
      },
      {
        title: 'Integrasi Media & Social Platform',
        description:
          'Koneksi seamless dengan Instagram, YouTube, WhatsApp, dan platform media sosial lainnya untuk meningkatkan engagement.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: 'Modern Website Design',
    }}>
    <Fragment slot='content'>
      <h3 class='text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2'>
        Website yang Mencerminkan Identitas Anda
      </h3>
      Setiap detail dirancang khusus untuk menonjolkan keunikan bisnis dan personal brand Anda
    </Fragment>

    <Fragment slot='bg'>
      <div class='absolute inset-0 bg-blue-50 dark:bg-transparent'></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Meningkatkan Engagement & Konversi',
        description:
          'Website dengan UX/UI yang optimal, call-to-action yang strategis, dan loading speed tinggi untuk meningkatkan tingkat konversi visitor menjadi customer.',
      },
      {
        title: 'Update & Maintenance Berkala',
        description:
          'Layanan maintenance rutin, update keamanan, backup otomatis, dan monitoring performa 24/7 untuk memastikan website selalu optimal.',
      },
      {
        title: 'Hemat Waktu & Efisien',
        description:
          'Proses pembuatan website yang sistematis dan terstruktur, dari konsultasi hingga launching hanya dalam 1-2 minggu.',
      },
      {
        title: 'Konsultasi & Support Lengkap',
        description:
          'Konsultasi gratis pre-development, training penggunaan CMS, dan support teknis jangka panjang untuk kesuksesan online Anda.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1611462985358-60d3498e0364?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Professional Team',
    }}>
    <Fragment slot='content'>
      <h3 class='text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2'>
        Dirancang untuk Kesuksesan Bisnis Anda
      </h3>
      Setiap elemen website dioptimalkan untuk mendorong pertumbuhan dan pencapaian target bisnis
    </Fragment>

    <Fragment slot='bg'>
      <div class='absolute inset-0 bg-blue-50 dark:bg-transparent'></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title='Proses Pembuatan Website yang Mudah & Transparan'
    items={[
      {
        title: 'Step 1: <span class="font-medium">Konsultasi & Analisis</span>',
        description:
          'Diskusi mendalam tentang kebutuhan, target audience, dan goals bisnis Anda. Tim kami akan menganalisis kompetitor dan memberikan rekomendasi terbaik.',
        icon: 'tabler:users',
      },
      {
        title: 'Step 2: <span class="font-medium">Design & Development</span>',
        description:
          'Pembuatan wireframe, mockup design, dan development website dengan teknologi modern. Preview dan revisi hingga Anda 100% puas.',
        icon: 'tabler:code',
      },
      {
        title: 'Step 3: <span class="font-medium">Testing & Optimasi</span>',
        description:
          'Quality assurance, testing di berbagai device, optimasi SEO dan performa loading speed untuk memastikan website siap launching.',
        icon: 'tabler:rocket',
      },
      {
        title: '<span class="font-medium">Launching & Support!</span>',
        description:
          'Website live, training penggunaan, dan support berkelanjutan untuk memastikan kesuksesan online Anda.',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Development Process',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title='Paket Layanan Website Codexsus'
    subtitle='Pilihan lengkap sesuai kebutuhan bisnis Anda dengan harga yang kompetitif'
    tagline='Paket Layanan'
    items={[
      {
        title: 'Landing Page Premium',
        description:
          'Website satu halaman yang powerful untuk promosi produk/jasa dengan konversi tinggi dan loading super cepat.',
        icon: 'flat-color-icons:document',
      },
      {
        title: 'Portfolio Professional',
        description:
          'Showcase karya dan pengalaman Anda dengan galeri interaktif, testimonial, dan contact form terintegrasi.',
        icon: 'flat-color-icons:gallery',
      },
      {
        title: 'Company Profile',
        description:
          'Website corporate multi-halaman dengan profil perusahaan, layanan, tim, dan blog untuk membangun kredibilitas.',
        icon: 'flat-color-icons:business-contact',
      },
      {
        title: 'E-Commerce Starter',
        description:
          'Toko online dengan sistem pembayaran, manajemen produk, dan dashboard admin untuk mulai berjualan online.',
        icon: 'flat-color-icons:currency-exchange',
      },
      {
        title: 'Blog & Content Platform',
        description:
          'Platform content dengan CMS yang mudah digunakan, kategori artikel, dan optimasi SEO untuk content marketing.',
        icon: 'flat-color-icons:document',
      },
      {
        title: 'Custom Web Application',
        description: 'Aplikasi web khusus sesuai kebutuhan bisnis dengan fitur advanced dan integrasi sistem existing.',
        icon: 'flat-color-icons:template',
      },
      {
        title: 'SEO & Digital Marketing',
        description:
          'Optimasi SEO on-page, Google Analytics setup, dan strategi digital marketing untuk meningkatkan traffic.',
        icon: 'flat-color-icons:advertising',
      },
      {
        title: 'Maintenance & Support',
        description:
          'Layanan pemeliharaan rutin, backup otomatis, monitoring uptime, dan support teknis 24/7 untuk keamanan website.',
        icon: 'flat-color-icons:database',
      },
      {
        title: 'Training & Consultancy',
        description: 'Pelatihan penggunaan website, konsultasi strategi digital, dan workshop untuk tim internal Anda.',
        icon: 'flat-color-icons:voice-presentation',
      },
    ]}>
    <Fragment slot='bg'>
      <div class='absolute inset-0 bg-blue-50 dark:bg-transparent'></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title='Tips & Insights Pengembangan Website'
    information={`Dapatkan tips terbaru tentang web development, design trends, SEO strategies, dan digital marketing.
                        Artikel-artikel berkualitas untuk membantu Anda memahami dunia digital dan mengoptimalkan online presence.
                        Stay updated dengan teknologi web terkini bersama Codexsus.
                `}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title='Pertanyaan yang Sering Diajukan'
    subtitle='Temukan jawaban atas pertanyaan umum seputar layanan pembuatan website dan proses kerja sama dengan Codexsus.'
    tagline='FAQ'
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Berapa lama proses pembuatan website?',
        description:
          'Untuk landing page atau portfolio sederhana: 3-7 hari kerja. Company profile: 1-2 minggu. E-commerce atau aplikasi custom: 3-4 minggu. Timeline dapat disesuaikan dengan kompleksitas dan kebutuhan revisi.',
      },
      {
        title: 'Bagaimana sistem pembayaran dan harga paket?',
        description:
          'Kami menyediakan paket mulai dari Rp500.000 untuk landing page hingga 15 juta untuk e-commerce. Pembayaran bisa dicicil: 50% down payment, 50% setelah selesai. Konsultasi dan estimasi gratis.',
      },
      {
        title: 'Apakah ada garansi dan after-sales support?',
        description:
          'Ya, kami memberikan garansi 3 bulan untuk bug fixing dan minor revision. Support teknis tersedia via WhatsApp/email. Maintenance package tersedia untuk backup rutin dan update konten.',
      },
      {
        title: 'Bisakah website dikelola sendiri setelah selesai?',
        description:
          'Tentu! Kami menggunakan CMS yang user-friendly seperti WordPress atau custom admin panel. Termasuk training penggunaan dan dokumentasi lengkap agar Anda bisa update konten mandiri.',
      },
      {
        title: 'Teknologi apa yang digunakan untuk membangun website?',
        description:
          'Kami menggunakan teknologi modern seperti React, Next.js, Astro untuk frontend. Backend dengan Node.js atau PHP. Database MySQL/PostgreSQL. Hosting di cloud server untuk performa optimal dan keamanan tinggi.',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Project Selesai', amount: '150+' },
      { title: 'Client Puas', amount: '98%' },
      { title: 'Teknologi Modern', amount: '10+' },
      { title: 'Support 24/7', amount: '100%' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Hubingi Kami',
        href: 'https://wa.me/6281234567890?text=Halo%20Codexsus!%20Saya%20tertarik%20dengan%20layanan%20pembuatan%20website%20Anda.%20Bisakah%20Anda%20memberikan%20informasi%20lebih%20lanjut%3F',
        target: '_blank',
        icon: 'tabler:brand-whatsapp',
      },
    ]}>
    <Fragment slot='title'>
      <span class='text-accent dark:text-white'>Siap Membangun</span>&nbsp;Website Impian?<br class='block sm:hidden' />
      <span class='sm:whitespace-nowrap'>Hubungi Codexsus Sekarang!</span>
    </Fragment>

    <Fragment slot='subtitle'>
      Konsultasi gratis untuk menentukan solusi website terbaik sesuai kebutuhan bisnis Anda. <br
        class='hidden md:inline'
      />
      Jangan tunggu lagi, wujudkan website profesional hari ini!
    </Fragment>
  </CallToAction>
</Layout>
