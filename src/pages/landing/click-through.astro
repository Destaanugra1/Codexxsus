---
import Layout from '~/layouts/LandingLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Codexsus - Landing Page dengan Konversi Tinggi',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline='Landing Page Premium'
    title='Landing Page yang Mengkonversi Visitor Menjadi Customer!'
    subtitle='Dapatkan landing page dengan desain yang menarik dan copy yang persuasif untuk meningkatkan conversion rate bisnis Anda.'
    actions={[
      {
        variant: 'primary',
        text: 'Konsultasi Sekarang',
        href: 'https://wa.me/62895610090128?text=Halo%20Codexsus!%20Saya%20tertarik%20dengan%20landing%20page%20premium.%20Bisakah%20kita%20diskusi%3F',
        icon: 'tabler:brand-whatsapp',
      },
      { text: 'Lihat Portfolio', href: '#' },
    ]}
    image={{
      src: '~/assets/images/hero-image.png',
      alt: 'Landing Page Design Premium Codexsus',
    }}
  />

  <CallToAction
    title='Siap Meningkatkan Conversion Rate?'
    subtitle='Dapatkan landing page yang dioptimasi khusus untuk bisnis Anda. Konsultasi gratis untuk menentukan strategi terbaik!'
    actions={[
      {
        variant: 'primary',
        text: 'Mulai Project',
        href: 'https://wa.me/62895610090128?text=Halo%20Codexsus!%20Saya%20ingin%20membuat%20landing%20page%20untuk%20bisnis%20saya.%20Bisakah%20kita%20diskusi%3F',
        icon: 'tabler:brand-whatsapp',
      },
    ]}
  />
</Layout>
