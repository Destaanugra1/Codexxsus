---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Codexsus - Website untuk Lead Generation & Customer Acquisition',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero
    tagline='Lead Generation Website'
    title='Website yang Mengubah Visitor Menjadi Prospek Berkualitas!'
    subtitle='Bangun sistem lead generation otomatis dengan website yang dioptimasi khusus untuk menangkap data prospek dan mengkonversi mereka menjadi customer loyal.'
    actions={[
      {
        variant: 'primary',
        text: 'Konsultasi Gratis',
        href: 'https://wa.me/62895610090128?text=Halo%20Codexsus!%20Saya%20tertarik%20dengan%20website%20lead%20generation.%20Bisakah%20kita%20diskusi%3F',
        icon: 'tabler:brand-whatsapp',
      },
      { text: 'Lihat Case Study', href: '#' },
    ]}
    image={{
      src: '~/assets/images/hero-image.png',
      alt: 'Strategi Lead Generation Codexsus',
    }}
  />

  <CallToAction
    title='Mulai Sistem Lead Generation Anda'
    subtitle='Dapatkan website yang bekerja 24/7 untuk mengumpulkan lead berkualitas. Tim Codexsus siap membantu!'
    actions={[
      {
        variant: 'primary',
        text: 'Mulai Project',
        href: 'https://wa.me/62895610090128?text=Halo%20Codexsus!%20Saya%20ingin%20website%20lead%20generation%20untuk%20bisnis%20saya.%20Bisakah%20kita%20diskusi%3F',
        icon: 'tabler:brand-whatsapp',
      },
    ]}
  />
</Layout>
