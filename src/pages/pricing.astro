---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline='Web Development Pricing'
    title='Professional Web Solutions for Every Budget'
    subtitle='Choose the perfect package that fits your business needs and goals.'
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title='Our Web Development Packages'
    subtitle='Professional website solutions for your business needs'
    prices={[
      {
        title: 'Basic',
        subtitle: 'Perfect for personal websites and portfolios',
        price: 29,
        period: 'per project',
        items: [
          {
            description: 'Landing page design (1-3 pages)',
          },
          {
            description: 'Responsive mobile-friendly design',
          },
          {
            description: 'Basic SEO optimization',
          },
          {
            description: 'Contact form integration',
          },
          {
            description: '1 month free maintenance',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Order via WhatsApp',
          href: 'https://wa.me/6281234567890?text=Hi,%20I%20am%20interested%20in%20the%20Basic%20Web%20Development%20Package%20for%20$29.%20Can%20we%20discuss%20the%20details?',
        },
      },
      {
        title: 'Standard',
        subtitle: 'Ideal for small businesses and startups',
        price: 69,
        period: 'per project',
        items: [
          {
            description: 'Complete website (5-10 pages)',
          },
          {
            description: 'Custom design and branding',
          },
          {
            description: 'Advanced SEO optimization',
          },
          {
            description: 'Content Management System (CMS)',
          },
          {
            description: 'Social media integration',
          },
          {
            description: '3 months free maintenance',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Order via WhatsApp',
          href: 'https://wa.me/6281234567890?text=Hi,%20I%20am%20interested%20in%20the%20Standard%20Web%20Development%20Package%20for%20$69.%20Can%20we%20discuss%20the%20details?',
        },
        hasRibbon: true,
        ribbonTitle: 'Most Popular',
      },
      {
        title: 'Premium',
        subtitle: 'Best for established businesses and e-commerce',
        price: 199,
        period: 'per project',
        items: [
          {
            description: 'E-commerce website with payment gateway',
          },
          {
            description: 'Advanced custom features and functionality',
          },
          {
            description: 'Database integration and user management',
          },
          {
            description: 'Analytics and reporting dashboard',
          },
          {
            description: 'Priority support and consultation',
          },
          {
            description: '6 months free maintenance',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Order via WhatsApp',
          href: 'https://wa.me/6281234567890?text=Hi,%20I%20am%20interested%20in%20the%20Premium%20Web%20Development%20Package%20for%20$199.%20Can%20we%20discuss%20the%20details?',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title='Why Choose Our Web Development Services'
    subtitle='Discover the advantages of working with our professional team'
    columns={2}
    items={[
      {
        title: 'Flexible Pricing Plans',
        description:
          'Choose from a range of packages designed to accommodate different budgets and project requirements.',
        icon: 'tabler:stairs',
      },
      {
        title: 'Transparent Pricing',
        description: 'Clear pricing details for each package with no hidden costs or unexpected charges.',
        icon: 'tabler:flip-vertical',
      },
      {
        title: 'Secure Development',
        description: 'Modern security practices and secure coding standards to protect your website and data.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Fast Delivery',
        description: 'Quick turnaround time with regular updates throughout the development process.',
        icon: 'tabler:accessible',
      },
      {
        title: 'Scalable Solutions',
        description: 'Websites built to grow with your business, easily expandable with new features.',
        icon: 'tabler:chevrons-up',
      },
      {
        title: '24/7 Support',
        description: 'Ongoing support via WhatsApp, email, or phone for all your questions and concerns.',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title='From consultation to launch - our development process'
    tagline='Simple Process'
    isReversed={true}
    items={[
      {
        title: 'Choose your package',
        icon: 'tabler:number-1',
      },
      {
        title: 'Contact us via WhatsApp',
        icon: 'tabler:number-2',
      },
      {
        title: 'Project consultation & planning',
        icon: 'tabler:number-3',
      },
      {
        title: 'Design mockup approval',
        icon: 'tabler:number-4',
      },
      {
        title: 'Development & testing',
        icon: 'tabler:number-5',
      },
      {
        title: 'Final review & deployment',
        icon: 'tabler:number-6',
      },
      {
        title: 'Launch your new website!',
        icon: 'tabler:number-7',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1536816579748-4ecb3f03d72a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Web development process',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title='Frequently Asked Questions'
    subtitle='Everything you need to know about our web development services and pricing.'
    columns={1}
    items={[
      {
        title: 'Do you provide ongoing support after the website is completed?',
        description:
          'Yes! All packages include free maintenance for a specified period. We also offer ongoing support and updates as needed.',
      },
      {
        title: 'Can I see examples of your previous work?',
        description:
          'Absolutely! We have a portfolio section showcasing our previous projects. You can also request specific examples related to your industry.',
      },
      {
        title: 'Can I upgrade my package during development?',
        description:
          "Yes, you can upgrade to a higher package at any time during the development process. We'll adjust the pricing accordingly.",
      },
      {
        title: 'What payment methods do you accept?',
        description:
          'We accept bank transfers, digital wallets (OVO, GoPay, DANA), and other convenient payment methods for Indonesian clients.',
      },
      {
        title: 'How long does it take to complete a website?',
        description:
          'Basic package: 1-2 weeks, Standard package: 2-4 weeks, Premium package: 4-8 weeks. Timeline depends on project complexity and your feedback response time.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title='Ready to bring your website vision to life?'
    subtitle='Join our satisfied clients who have transformed their online presence with our professional web development services.'
    actions={[
      {
        variant: 'primary',
        text: 'Contact us on WhatsApp',
        href: 'https://wa.me/6281234567890?text=Hi,%20I%20would%20like%20to%20discuss%20my%20web%20development%20project.%20Can%20we%20talk?',
      },
    ]}
  />
</Layout>
